#!/bin/sh 
#

mkdir /stmpp1/Benjamin.Blake/work
cd /stmpp1/Benjamin.Blake/work

cp /gpfs/hps/emc/meso/noscrub/Benjamin.Blake/nwprod/hrrr.v2.0.10/sms/post/wrfbufr/jhrrr_wrfbufr_fHH_XX.bsub .
cycles="12"
hours="00 01 02 03 04 05 06 07 08 09 10 11 12 13 14 15 16 17"
for cyc in $cycles; do
for fhr in $hours; do
 echo $fhr
 cp jhrrr_wrfbufr_fHH_XX.bsub jhrrr_wrfbufr_f${fhr}_${cyc}.bsub
 vi jhrrr_wrfbufr_f${fhr}_${cyc}.bsub << EOF 
   :1,\$ s/HH/${fhr}
   :1,\$ s/XX/${cyc}
   :wq
EOF
mv jhrrr_wrfbufr_f${fhr}_${cyc}.bsub /gpfs/hps/emc/meso/noscrub/Benjamin.Blake/nwprod/hrrr.v2.0.10/sms/post/wrfbufr/.
done
done

cp /gpfs/hps/emc/meso/noscrub/Benjamin.Blake/nwprod/hrrr.v2.0.10/sms/post/wrfbufr/jhrrr_wrfbufr_f18_XX.bsub .
for cyc in $cycles; do
 echo $cyc
 cp jhrrr_wrfbufr_f18_XX.bsub jhrrr_wrfbufr_f18_${cyc}.bsub
 vi jhrrr_wrfbufr_f18_${cyc}.bsub << EOF 
   :1,\$ s/XX/${cyc}
   :wq
EOF
mv jhrrr_wrfbufr_f18_${cyc}.bsub /gpfs/hps/emc/meso/noscrub/Benjamin.Blake/nwprod/hrrr.v2.0.10/sms/post/wrfbufr/.
done

exit
