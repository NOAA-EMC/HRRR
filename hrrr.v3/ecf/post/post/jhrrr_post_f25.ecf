# EXPORT list here

set -x

export cyc=%CYC%
export fhr=25
export dom=%DOMAIN%
export job=hrrr_%DOMAIN%_post_f25_%CYC%

# versions file for Hi-Res Rapid Refresh model $mod_ver
VERSION_FILE=$NWROOT/versions/hrrr.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ecflow_client --abort
  exit
fi

# CALL executable job script here
$NWROOT/hrrr.${hrrr_ver}/jobs/JHRRR_POST

if [ $? -ne 0 ]; then
  ecflow_client --abort
  exit
fi

