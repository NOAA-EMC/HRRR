           $(XMLPARSE_INC) \
           $(G2_INC4) \
           $(G2TMPL_INC) \
           $(NEMSIO_INC) \
           $(GFSIO_INC4) \
           $(SIGIO_INC4) \
           $(SFCIO_INC4) \
           $(W3EMC_INC4) \
           $(CRTM_INC) \
           $(NETCDF_INC)

LIBS     = $(WRF_LIB) \
           $(XMLPARSE_LIB) \
           $(G2TMPL_LIB) \
           $(G2_LIB4) \
           $(JASPER_LIB) \
           $(PNG_LIB) \
           $(Z_LIB) \
           $(NEMSIO_LIB) \
           $(GFSIO_LIB4) \
           $(SIGIO_LIB4) \
           $(SFCIO_LIB4) \
           $(IP_LIB) \
           $(SP_LIB4) \
           $(W3NCO_LIB4) \
           $(W3EMC_LIB4) \
           $(BACIO_LIB4) \
           $(CRTM_LIB) \
           $(NETCDF_LIB)


