#-------------------------------------------------------------------------------#
# DEBUG build settings for Linux pgf95 compiler
#-------------------------------------------------------------------------------#

# The compiler and linker name
export FC="pgf95"

export FL="pgf95"

# Compiler and linker settings for DEBUG builds
F_COMMON_FLAGS="-Kieee"

export FC_FLAGS="\
 -c \
 -g \
 -byteswapio \
 -Ktrap=ovf,divz -Mdaz \
 -Mbounds \
 -Mchkstk \
 -Mdclchk \
 -Minform,inform \
 -Mnosave \
 -Mref_externals \
 ${F_COMMON_FLAGS}"

export FL_FLAGS="\
 ${F_COMMON_FLAGS}"


echo "========================================="
echo " CRTM compilation environment variables:"
echo "   FC:       ${FC}"
echo "   FC_FLAGS: ${FC_FLAGS}"
echo "   FL:       ${FL}"
echo "   FL_FLAGS: ${FL_FLAGS}"
echo "========================================="
echo
